@{
    ViewBag.Title = Model.Name;
    IAuthentication auth = DependencyResolver.Current.GetService<IAuthentication>();
}
@using ChudoPechkaLib.Models
@using ChudoPechkaLib;
@model Dish
@section ScriptAndStyle{
    <style>
        #text {
            width: 600px;
            height: 80px;
            font-family: Calibri;
        }

        #load {
            width: 100px;
            height: auto;
            padding-top: 100px;
            padding-bottom: 100px;
            margin: auto;
        }

        .button {
            margin-left: 85px;
            margin-bottom: 10px;
        }

        .line {
            width: 70%;
        }

        .comment-text-container {
            width: 600px;
            display: inline-block;
            vertical-align: top;
        }

        .comment {
            margin-bottom: 10px;
            border-bottom: 1px solid black;
            padding-bottom: 10px;
        }

        .comment-button {
            width: 17px;
            height: 17px;
            display: inline-block;
        }

        .comment-button-img {
            width: 100%;
            height: 100%;
        }
    </style>
    <script>
        $(window).load(function () {
            SetComments();
        });

        function SetComments() {
            $("#comments").html('<div id="load" style=""><img src="@Url.Content("~/img/Standart/Load.gif")" style="width:100%;height:auto" /></div>');
            $.ajax({
                async: true,
                contentType: "html",
                method: "Post",
                url: '@Url.Action("GetComments")?dish_id=@Model.Id',
                success: function (data) {
                    $("#comments").html(data);
                    $("#load").remove();
                }
            });
        }

        function SendComment() {
            var data = {
                "__RequestVerificationToken": $("[name=__RequestVerificationToken]").val(),
                "user_login": $("#user_login").val(),
                "dish_id": $("#dish_id").val(),
                "text": $("#text").val()
            };

            $.post('@Url.Action("AddComment")', data)
                .success(function () {
                    SetComments();
                    $("#text").val("");
                });
        }
        function DeleteComment(elem) {
            var data = {
                "__RequestVerificationToken": $("[name=__RequestVerificationToken]").val(),
                "user_login": $(elem).find(".login").val(),
                "comment_id": $(elem).find(".comment_id").val()
            }
            $.post('@Url.Action("RemoveComment")', data)
                .success(function () {
                    SetComments();
                });
        }
        function OnLeaveButton(elem, src) {
            $(elem).find(".comment-button-img").removeAttr("src");
            $(elem).find(".comment-button-img").attr("src", src);
        }
        function OnMoveButton(elem, src) {
            $(elem).find(".comment-button-img").removeAttr("src");
            $(elem).find(".comment-button-img").attr("src", src);
        }
    </script>
    <script src="~/scripts/jquery-2.2.1.js"></script>
}
<div style="padding-left:15px;">
    <div style="text-align:center; font-size: 19pt;">
        <hr size="5" color="black" class="line">
        <span>@Model.Name</span>
        <hr size="5" color="black" class="line">
    </div>
    @if (auth.IsAuthentication)
    {
        <div style="width:80px;height:auto; display:inline-block;">
            <img src="@Url.Content(auth.User.AvatarPath)" style="width:100%; height:100%; border-radius:100%;" />
        </div>
        <div style="display:inline-block">
            @Html.AntiForgeryToken()
            <input type="hidden" value="@auth.User.Login" id="user_login" />
            <input type="hidden" value="@Model.Id" id="dish_id" />
            <textarea id="text"></textarea><br />
        </div>
        <button class="button" onclick="SendComment()">Отправить</button>
    }
    <div id="comments">
    </div>
</div>