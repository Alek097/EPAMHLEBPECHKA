@{
    Layout = null;
    string fullName = Model.FirsName + " " + Model.SecondName;
}
@model ChudoPechkaLib.Models.User
<a href="@Url.Action("Index", "Account")">
    <div class="UserLink" style="width:500px;height:100px;border-top: 1px solid black; border-bottom: 1px solid black; border-right: 1px solid black;">
        <div style="width:80%; height: 100%; text-align:center; float: right;">
            <span style="font-size: 9pt">@fullName</span><br />
            <span style="font-size: 6pt">@Model.Login</span><br />
        </div>
        <div style="width:20%; height:auto;">
            <img style="width:100%; height:100%" src="@Url.Content(Model.AvatarPath)" />
        </div>
    </div>
</a>