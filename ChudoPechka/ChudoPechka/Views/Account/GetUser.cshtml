@{
    Layout = null;
    string fullName = Model.FirsName + " " + Model.SecondName;
}
@model ChudoPechkaLib.Models.User
@if (Model != null)
{
    <div id="@Model.Login" class="UserLink" style="width:100%;height:100px;border-top: 1px solid black; border-bottom: 1px solid black; margin-bottom: 10px;">
        <div class="User-info" style="width:80%; height: 100%; text-align:center; float: right;">
            <div style="margin-right:20%;">
                <span style="font-size: 14pt">@fullName</span><br />
                <span style="font-size: 9pt">@Model.Login</span><br />
            </div>
        </div>
        <div style="width:12%; height:auto;">
            <a href="@Url.Action("Index", "Account", new { login = Model.Login })">
                <img style="width:100%; height:100%;border-radius: 100%" src="@Url.Content(Model.AvatarPath)" />
            </a>
        </div>
    </div>
}
else
{
    @Html.Raw("Пользователь с логином не найден")
}